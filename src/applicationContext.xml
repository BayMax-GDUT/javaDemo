<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--通过set方法进行注入-->
    <bean id="student1" class="com.demo.entity.Student">
        <property name="id" value="1"></property>
        <property name="age" value="1"></property>
        <property name="name" value="1"></property>
    </bean>

    <!--通过构造函数进行注入 需要声明相对应的构造函数-->
    <bean id="student2" class="com.demo.entity.Student">
        <constructor-arg value="2" index="0" name="age"></constructor-arg>
        <constructor-arg value="2" index="1" name="name"></constructor-arg>
        <constructor-arg value="2" index="2" name="id"></constructor-arg>
    </bean>

    <!--通过p命名空间注入-->
    <bean id="student3" class="com.demo.entity.Student" p:age="3" p:id="3" p:name="3" p:deskMate-ref="student1">

    </bean>
</beans>